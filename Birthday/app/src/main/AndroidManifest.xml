<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.emonized.birthday">

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/icon"
                 android:roundIcon="@mipmap/icon"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme">

        <activity android:name=".ui.SplashActivity" android:theme="@style/SplashAppTheme" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.DashboardActivity" android:theme="@style/SplashAppTheme" android:screenOrientation="portrait">

        </activity>

        <activity android:name=".ui.GalleryActivity" android:theme="@style/SplashAppTheme" android:screenOrientation="portrait">

        </activity>
    </application>
</manifest>
